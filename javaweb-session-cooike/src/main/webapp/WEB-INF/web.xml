<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">
    <servlet>
        <servlet-name>CookieDemonServlet</servlet-name>
        <servlet-class>com.hl.servlet.CookieDemonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CookieDemonServlet</servlet-name>
        <url-pattern>/cookie</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CookieDemo2Servlet</servlet-name>
        <servlet-class>com.hl.servlet.CookieDemo2Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CookieDemo2Servlet</servlet-name>
        <url-pattern>/c2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CookieDemon3</servlet-name>
        <servlet-class>com.hl.servlet.CookieDemon3</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CookieDemon3</servlet-name>
        <url-pattern>/c3</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SessionDemo1</servlet-name>
        <servlet-class>com.hl.servlet.SessionDemo1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionDemo1</servlet-name>
        <url-pattern>/s1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SessionDemo2</servlet-name>
        <servlet-class>com.hl.servlet.SessionDemo2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionDemo2</servlet-name>
        <url-pattern>/s2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SessionDemo3</servlet-name>
        <servlet-class>com.hl.servlet.SessionDemo3</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionDemo3</servlet-name>
        <url-pattern>/s3</url-pattern>
    </servlet-mapping>

    <!--配置Session自动注销时间-->
    <session-config>
        <!--1分钟后Session自动失效  以分钟为单位-->
        <session-timeout>1</session-timeout>
    </session-config>
</web-app>